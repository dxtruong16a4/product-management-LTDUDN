@model ProductManagement.DTOs.PagedResult<ProductManagement.DTOs.ProductDto>

@{
    ViewData["Title"] = "Danh sách sản phẩm";
}

<!-- Hidden anti-forgery token for delete -->
@Html.AntiForgeryToken()

<div class="container mt-4">
    <h1>Danh sách sản phẩm</h1>
    
    <div class="row mb-3">
        <div class="col-md-6">
            <p>
                <a asp-action="Create" class="btn btn-primary-custom">
                    <i class="bi bi-plus-circle"></i> Thêm sản phẩm mới
                </a>
            </p>
        </div>
        <div class="col-md-6">
            <form asp-action="Index" method="get" class="d-flex">
                <input type="text" name="searchTerm" value="@ViewData["CurrentFilter"]" 
                       class="form-control me-2" placeholder="Tìm kiếm theo tên hoặc mô tả..." />
                <button type="submit" class="btn btn-search">Tìm kiếm</button>
                <a asp-action="Index" class="btn btn-clear ms-2">Xoá bộ lọc</a>
            </form>
        </div>
    </div>
    
    @if (Model.TotalCount == 0)
    {
        <div class="alert alert-info" role="alert">
            Không có sản phẩm nào. @(string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()) ? "" : "Thử tìm kiếm với từ khóa khác.")
        </div>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            Hiển thị @Model.Items.Count() của @Model.TotalCount sản phẩm (Trang @Model.CurrentPage của @Model.TotalPages)
        </div>
        
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Name)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Price)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Stock)</th>
                    <th>@Html.DisplayNameFor(model => model.Items.First().Description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Price)</td>
                        <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-action btn-edit">Sửa</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-action btn-details">Chi tiết</a>
                            <button onclick="confirmDelete(@item.Id, '@item.Name')" class="btn btn-action btn-delete">Xoá</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        
        <!-- Pagination -->
        <nav aria-label="Product pagination">
            <ul class="pagination justify-content-center">
                <li class="page-item @(!Model.HasPrevious ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageNumber="@(Model.CurrentPage - 1)"
                       asp-route-searchTerm="@ViewData["CurrentFilter"]">
                        Trước
                    </a>
                </li>
                
                @{
                    var startPage = Math.Max(1, Model.CurrentPage - 2);
                    var endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);
                    
                    // Show first page if not in range
                    if (startPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageNumber="1"
                               asp-route-searchTerm="@ViewData["CurrentFilter"]">
                                1
                            </a>
                        </li>
                        if (startPage > 2)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                    }
                    
                    // Show page numbers in range
                    for (var i = startPage; i <= endPage; i++)
                    {
                        <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageNumber="@i"
                               asp-route-searchTerm="@ViewData["CurrentFilter"]">
                                @i
                            </a>
                        </li>
                    }
                    
                    // Show last page if not in range
                    if (endPage < Model.TotalPages)
                    {
                        if (endPage < Model.TotalPages - 1)
                        {
                            <li class="page-item disabled">
                                <span class="page-link">...</span>
                            </li>
                        }
                        <li class="page-item">
                            <a class="page-link" 
                               asp-action="Index" 
                               asp-route-pageNumber="@Model.TotalPages"
                               asp-route-searchTerm="@ViewData["CurrentFilter"]">
                                @Model.TotalPages
                            </a>
                        </li>
                    }
                }
                
                <li class="page-item @(!Model.HasNext ? "disabled" : "")">
                    <a class="page-link" 
                       asp-action="Index" 
                       asp-route-pageNumber="@(Model.CurrentPage + 1)"
                       asp-route-searchTerm="@ViewData["CurrentFilter"]">
                        Sau
                    </a>
                </li>
            </ul>
        </nav>
    }
</div>

@section Scripts {
    <script>
        function confirmDelete(id, name) {
            Swal.fire({
                title: 'Bạn chắc chứ?',
                html: `Bạn có chắc chắn muốn xoá sản phẩm <strong>${name}</strong>?`,
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#dc2626',
                cancelButtonColor: '#6b7280',
                confirmButtonText: 'Có, xoá!',
                cancelButtonText: 'Hủy',
                reverseButtons: true
            }).then((result) => {
                if (result.isConfirmed) {
                    // Create a form and submit
                    const form = document.createElement('form');
                    form.method = 'POST';
                    form.action = '/Products/Delete/' + id;
                    
                    // Add anti-forgery token
                    const token = document.querySelector('input[name="__RequestVerificationToken"]');
                    if (token) {
                        const hiddenToken = document.createElement('input');
                        hiddenToken.type = 'hidden';
                        hiddenToken.name = '__RequestVerificationToken';
                        hiddenToken.value = token.value;
                        form.appendChild(hiddenToken);
                    }
                    
                    document.body.appendChild(form);
                    form.submit();
                }
            });
        }

        // Show success message if redirected after delete
        @if (TempData["SuccessMessage"] != null)
        {
            <text>
            Swal.fire({
                icon: 'success',
                title: 'Thành công!',
                timer: 2000,
                showConfirmButton: false
            });
            </text>
        }
    </script>
}
